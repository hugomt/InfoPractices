<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/practicesDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:backgroundTint="#F1F1F1"
    tools:context=".PracticesDetails">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="48dp"
                android:layout_height="38dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/arrow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageDetail"
                    android:layout_width="133dp"
                    android:layout_height="71dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/neoris" />

                <Button
                    android:id="@+id/buttonFollow"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="30dp"

                    android:layout_weight="1"
                    android:backgroundTint="#F1F1F1"
                    android:text="Seguir"
                    android:textColor="#3263D6"
                    app:strokeColor="#3263D6"
                    app:strokeWidth="1.3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/locationDetail"
                    android:layout_width="300dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:paddingTop="1dp"
                    android:text="Madrid, España"
                    android:textColor="#969696" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/homeDetail"
                    android:layout_width="300dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:paddingTop="1dp"
                    android:text="Presencial"
                    android:textColor="#969696" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:src="@drawable/salary" />

                <TextView
                    android:id="@+id/salaryDetail"
                    android:layout_width="300dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:paddingTop="1dp"
                    android:text="12.000€ - 28.000€ Bruto/año"
                    android:textColor="#969696" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:src="@drawable/paper" />

                <TextView
                    android:id="@+id/contratoDetail"
                    android:layout_width="300dp"
                    android:layout_height="22dp"
                    android:layout_weight="1"
                    android:paddingTop="1dp"
                    android:text="Jornada completa"
                    android:textColor="#969696" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="9dp"
                    android:background="#a7a7a0"
                    android:orientation="horizontal">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="DESCRIPTION OF PRACTICES "
                    android:textColor="#3263D6"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/empresaDescription"
                    android:layout_width="match_parent"
                    android:layout_height="668dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"

                    android:text="Descripcion"
                    android:textAlignment="textStart" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>